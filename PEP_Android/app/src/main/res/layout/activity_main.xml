<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.MainActivity"
    android:weightSum="1"
    >

    <Button
        android:id="@+id/scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonOddColor"
        android:text="@string/button_scanner"
        android:textSize="20sp"
        android:textColor="@color/textOddColor"
        android:onClick="buttonClick"
        android:layout_weight="0.25" />
    <Button
        android:id="@+id/passport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonEvenColor"
        android:text="@string/button_passport"
        android:textSize="20sp"
        android:textColor="@color/textEvenColor"
        android:onClick="buttonClick"
        android:layout_weight="0.25" />
    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonOddColor"
        android:text="@string/button_settings"
        android:textSize="20sp"
        android:textColor="@color/textOddColor"
        android:onClick="buttonClick"
        android:layout_weight="0.25" />
    <Button
        android:id="@+id/overig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonEvenColor"
        android:text="@string/button_overig"
        android:textSize="20sp"
        android:textColor="@color/textEvenColor"
        android:onClick="buttonClick"
        android:layout_weight="0.25" />
</LinearLayout>
